<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="HeaderTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:background">@color/header_background</item>
    </style>

    <style name="ItemTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SubItemTextStyle" parent="ItemTextStyle">
        <item name="android:textSize">@dimen/subitem_text_size</item>
    </style>

</resources>
